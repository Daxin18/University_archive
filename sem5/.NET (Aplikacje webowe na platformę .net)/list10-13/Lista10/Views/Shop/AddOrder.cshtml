@model Lista10.ViewModels.OrderDataViewModel;


@{
    ViewData["Title"] = "Order";
}

<h1>Złożono zamówienie</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articles.Last().article.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.Last().article.Price)
            </th>
            <th>
                Quantity
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.article.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.article.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    <dd class="col-sm-10">
                        <img src="@(item.article.Image)" asp-append-version="true" width="50" />
                    </dd>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2 class=@ViewBag.CartArticlePriceClass> Total Price: @ViewBag.CartArticlePrice </h2>

<table class="table">
    <tbody>
        <tr>
            <th>
                Name:
            </th>
            <td>
                @Model.Name.ToString()
            </td>
        </tr>
        <tr>
            <th>
                Surname:
            </th>
            <td>
                @Model.Surname.ToString()
            </td>
        </tr>
        <tr>
            <th>
                Address:
            </th>
            <td>
                @Model.Address.ToString()
            </td>
        </tr>
        <tr>
            <th>
                Payment method:
            </th>
            <td>
                @Model.Payment_method.ToString()
            </td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Index"> OK </a>